<nav x-data="{ menuVisible: window.innerWidth > 768 }" @click.away="if(window.innerWidth < 768) menuVisible = false"
    class="flex items-center justify-between flex-wrap sm:flex-row bg-white dark:bg-zinc-900 text-neutral-700 dark:text-neutral-100	 p-4 drop-shadow-md sticky top-0 z-10">
    <a href="{{ url_for('ui.index') }}">
        <div class="flex flex-row items-center flex-shrink-0 text-neutral-900 dark:text-neutral-200 mr-6">
            <img width="61" height="40" src="{{ url_for('static', filename='img/wingetty_small.png')}}" alt="Logo"
                class="h-10 w-auto mr-2">
            <span
                class="font-semibold text-2xl {% if config.IS_CLOUD %}text-lg leading-5{% endif %} tracking-tight mt-0.5">WinGetty
                {% if config.IS_CLOUD %}<br>
                <span
                    class="text-transparent font-medium bg-clip-text bg-gradient-to-br from-[#31ffee] to-[#2660ff]">Cloud</span>
                {%endif%}
            </span>
        </div>
    </a>
    
    <div class="block md:hidden">
        <button @click="menuVisible = !menuVisible"
            class="flex items-center px-3 py-2  hover:bg-slate-200 hover:dark:bg-zinc-950 transition-colors duration-300">
            <svg class="fill-current h-6 w-6 transition-transform duration-300"
                x-bind:class="menuVisible ? '-rotate-90' : 'rotate-0'" viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg">
                <title>Menu</title>
                <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
            </svg>
        </button>
    </div>

    <div class="w-full block flex-grow md:flex md:flex-row justify-between items-center md:w-auto text-lg font-semibold"
        x-collapse x-show="menuVisible">

        <div class="text-lg font-semibold">
            <a href="{{ url_for('ui.packages') }}" class="block mt-2 px-2 py-1 md:inline-block md:mt-0  hover:bg-slate-200 hover:dark:bg-zinc-950 rounded-md
                {% if request.endpoint == 'ui.packages' %}bg-slate-200 dark:bg-zinc-950{% endif %}">
                Packages
            </a>
            {% if current_user.role.has_permission('view:own_user') %}
            <a href="{{ url_for('ui.users') }}" class="block mt-2 px-2 py-1 md:inline-block md:mt-0  hover:bg-slate-200 hover:dark:bg-zinc-950 rounded-md
                               {% if request.endpoint == 'ui.users' %}bg-slate-200 dark:bg-zinc-950{% endif %}">
                Access
            </a>
            {% endif %}
            <a href="{{ url_for('ui.logs') }}"
                class="block mt-2 px-2 py-1 md:inline-block md:mt-0  hover:bg-slate-200 hover:dark:bg-zinc-950 mr-4 rounded-md {% if request.endpoint == 'ui.logs' %}bg-slate-200 dark:bg-zinc-950{% endif %}">
                Logs
            </a>
        </div>
        <div class="flex-grow"></div>

        <a href="{{ url_for('ui.setup') }}" class="block mt-2 px-2 py-1 md:inline-block md:mt-0  hover:bg-slate-200 hover:dark:bg-zinc-950 mr-4 transition-colors duration-500 rounded-md
                            {% if request.endpoint == 'ui.setup' %}bg-slate-200 dark:bg-zinc-950{% endif %}">Setup</a>
        {% if current_user.role.has_permission('view:settings') %}
        <a href="{{ url_for('ui.settings') }}"
            class="block mt-2 px-2 py-1 md:inline-block md:mt-0  hover:bg-slate-200 hover:dark:bg-zinc-950 mr-4 transition-colors duration-500 rounded-md
                            {% if request.endpoint == 'ui.settings' %}bg-slate-200 dark:bg-zinc-950  {% endif %}">Settings</a>
        {% endif %}
        <!-- Notification bell -->
        <div x-data="{ notifications: [], open: false }" @notification-added.window="notifications.push($event.detail)"
            @notification-removed.window="notifications = notifications.filter(n => n.id !== $event.detail)"
            class="relative w-7 h-8 mr-3">
            <button @click="open = !open" class="  hover:text-zinc-950 dark:hover:text-slate-300 mr-4 transition-colors duration-500">
                <svg :class="{'animate-swing': notifications.length >= 1}" class="w-7 h-8 origin-top" data-slot="icon"
                    fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path clip-rule="evenodd" fill-rule="evenodd"
                        d="M10 2a6 6 0 0 0-6 6c0 1.887-.454 3.665-1.257 5.234a.75.75 0 0 0 .515 1.076 32.91 32.91 0 0 0 3.256.508 3.5 3.5 0 0 0 6.972 0 32.903 32.903 0 0 0 3.256-.508.75.75 0 0 0 .515-1.076A11.448 11.448 0 0 1 16 8a6 6 0 0 0-6-6ZM8.05 14.943a33.54 33.54 0 0 0 3.9 0 2 2 0 0 1-3.9 0Z">
                    </path>
                </svg>
                <span class="absolute top-0 right-0 inline-block w-3 h-3 text-white text-xs font-semibold rounded-full"
                    x-show="notifications.length > 0" x-cloak x-transition:enter="transition ease-out duration-300"
                    x-transition:enter-start="opacity-0 scale-50 origin-top-right"
                    x-transition:enter-end="opacity-100 scale-100" x-transition:leave="transition ease-in duration-300"
                    x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-50">
                    <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
                </span>
            </button>
            <div x-show="open" @click.away="open = false" @keydown.escape.window="open = false" x-cloak
                x-transition:enter="transition ease-out duration-200 transform"
                x-transition:enter-start="opacity-0 scale-75 origin-top-right"
                x-transition:enter-end="opacity-100 scale-100"
                x-transition:leave="transition ease-in duration-200 transform"
                x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-75"
                class="absolute right-0 w-96 mt-4 origin-top-right rounded-md shadow-lg bg-white dark:bg-zinc-900 focus:outline-none">
                <div
                    class=" bg-white dark:bg-zinc-900  focus:outline-none flex flex-col space-y-4 px-4 pb-4 rounded-md">
                    <template x-for="notification in notifications" :key="notification.id">
                        <div class="relative group">
                            <div class="flex items-center"
                                :class="{ 'text-green-500' : notification.type=='success', 'text-blue-500' : notification.type=='info', 'text-orange-400' : notification.type=='warning', 'text-red-500' : notification.type=='error', 'text-gray-800' : notification.type=='default' }">

                                <svg x-show="notification.type=='success'" class="w-[18px] h-[18px] mr-1.5 -ml-1"
                                    viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2ZM16.7744 9.63269C17.1238 9.20501 17.0604 8.57503 16.6327 8.22559C16.2051 7.87615 15.5751 7.93957 15.2256 8.36725L10.6321 13.9892L8.65936 12.2524C8.24484 11.8874 7.61295 11.9276 7.248 12.3421C6.88304 12.7566 6.92322 13.3885 7.33774 13.7535L9.31046 15.4903C10.1612 16.2393 11.4637 16.1324 12.1808 15.2547L16.7744 9.63269Z"
                                        fill="currentColor"></path>
                                </svg>
                                <svg x-show="notification.type=='info'" class="w-[18px] h-[18px] mr-1.5 -ml-1"
                                    viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2ZM12 9C12.5523 9 13 8.55228 13 8C13 7.44772 12.5523 7 12 7C11.4477 7 11 7.44772 11 8C11 8.55228 11.4477 9 12 9ZM13 12C13 11.4477 12.5523 11 12 11C11.4477 11 11 11.4477 11 12V16C11 16.5523 11.4477 17 12 17C12.5523 17 13 16.5523 13 16V12Z"
                                        fill="currentColor"></path>
                                </svg>
                                <svg x-show="notification.type=='warning'" class="w-[18px] h-[18px] mr-1.5 -ml-1"
                                    viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M9.44829 4.46472C10.5836 2.51208 13.4105 2.51168 14.5464 4.46401L21.5988 16.5855C22.7423 18.5509 21.3145 21 19.05 21L4.94967 21C2.68547 21 1.25762 18.5516 2.4004 16.5862L9.44829 4.46472ZM11.9995 8C12.5518 8 12.9995 8.44772 12.9995 9V13C12.9995 13.5523 12.5518 14 11.9995 14C11.4473 14 10.9995 13.5523 10.9995 13V9C10.9995 8.44772 11.4473 8 11.9995 8ZM12.0009 15.99C11.4486 15.9892 11.0003 16.4363 10.9995 16.9886L10.9995 16.9986C10.9987 17.5509 11.4458 17.9992 11.9981 18C12.5504 18.0008 12.9987 17.5537 12.9995 17.0014L12.9995 16.9914C13.0003 16.4391 12.5532 15.9908 12.0009 15.99Z"
                                        fill="currentColor"></path>
                                </svg>
                                <svg x-show="notification.type=='error'" class="w-[18px] h-[18px] mr-1.5 -ml-1"
                                    viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12ZM11.9996 7C12.5519 7 12.9996 7.44772 12.9996 8V12C12.9996 12.5523 12.5519 13 11.9996 13C11.4474 13 10.9996 12.5523 10.9996 12V8C10.9996 7.44772 11.4474 7 11.9996 7ZM12.001 14.99C11.4488 14.9892 11.0004 15.4363 10.9997 15.9886L10.9996 15.9986C10.9989 16.5509 11.446 16.9992 11.9982 17C12.5505 17.0008 12.9989 16.5537 12.9996 16.0014L12.9996 15.9914C13.0004 15.4391 12.5533 14.9908 12.001 14.99Z"
                                        fill="currentColor"></path>
                                </svg>
                                <p class="text-[13px] font-medium leading-none text-gray-800 dark:text-white"
                                    x-text="notification.message"></p>
                                <button
                                    class="text-gray-400  p-1.5 transition-all duration-200 opacity-0 group-hover:opacity-100 ease-in-out rounded-full cursor-pointer hover:bg-gray-50 dark:hover:bg-neutral-800 dark:hover:text-gray-300 hover:text-gray-500"
                                    @click="window.removeNotification(notification.id)">
                                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </button>
                            </div>
                            <p x-show="notification.description" :class="{ 'pl-5' : notification.type!='default' }"
                                class="mt-1.5 text-xs leading-none opacity-70 dark:text-white"
                                x-text="notification.description"></p>


                        </div>

                    </template>
                </div>
                <div x-show="notifications.length === 0"
                    class="bg-white dark:bg-zinc-900  focus:outline-none flex flex-col space-y-4 px-4 pb-4 rounded-md">
                    <p class="text-[13px] font-medium leading-none text-gray-800 dark:text-white">No notifications</p>
                </div>
            </div>
        </div>


        {% if config.IS_CLOUD and current_user.role.id == 1 %}
        <a href="https://subscription.wingetty.dev/p/login/4gw2aXeXacdgcPm8ww?prefilled_email={{ current_user.email }}"
            class="block mt-2 md:inline-block md:mt-0  hover:bg-slate-200 hover:dark:bg-zinc-950 mr-4 transition-colors duration-500">
            Manage subscription
        </a>
        {% endif %}




        <a href="{{ url_for('auth.logout') }}" aria-label="Logout"
            class="block mt-2 md:inline-block md:mt-0  hover:bg-slate-200 hover:dark:bg-zinc-950 mr-4 ">

            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="feather feather-log-out">
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                <polyline points="16 17 21 12 16 7"></polyline>
                <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>

        </a>

        <div class="w-full md:w-auto flex flex-row justify-end">
            <button id="theme-toggle" class="theme-toggle mt-2 sm:mt-0 " type="button" title="Toggle theme"
                aria-label="Toggle theme">
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" width="1.2em" height="1.2em"
                    fill="currentColor" class="theme-toggle__expand" viewBox="0 0 32 32">
                    <clipPath id="theme-toggle__expand__cutout">
                        <path d="M0-11h25a1 1 0 0017 13v30H0Z" />
                    </clipPath>
                    <g clip-path="url(#theme-toggle__expand__cutout)">
                        <circle cx="16" cy="16" r="8.4" />
                        <path
                            d="M18.3 3.2c0 1.3-1 2.3-2.3 2.3s-2.3-1-2.3-2.3S14.7.9 16 .9s2.3 1 2.3 2.3zm-4.6 25.6c0-1.3 1-2.3 2.3-2.3s2.3 1 2.3 2.3-1 2.3-2.3 2.3-2.3-1-2.3-2.3zm15.1-10.5c-1.3 0-2.3-1-2.3-2.3s1-2.3 2.3-2.3 2.3 1 2.3 2.3-1 2.3-2.3 2.3zM3.2 13.7c1.3 0 2.3 1 2.3 2.3s-1 2.3-2.3 2.3S.9 17.3.9 16s1-2.3 2.3-2.3zm5.8-7C9 7.9 7.9 9 6.7 9S4.4 8 4.4 6.7s1-2.3 2.3-2.3S9 5.4 9 6.7zm16.3 21c-1.3 0-2.3-1-2.3-2.3s1-2.3 2.3-2.3 2.3 1 2.3 2.3-1 2.3-2.3 2.3zm2.4-21c0 1.3-1 2.3-2.3 2.3S23 7.9 23 6.7s1-2.3 2.3-2.3 2.4 1 2.4 2.3zM6.7 23C8 23 9 24 9 25.3s-1 2.3-2.3 2.3-2.3-1-2.3-2.3 1-2.3 2.3-2.3z" />
                    </g>
                </svg>
            </button>
        </div>

    </div>

</nav>